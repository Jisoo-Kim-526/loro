import React, { Component } from 'react';
import { Image, TextInput, Alert, StyleSheet, Text, TouchableOpacity, Button, View } from 'react-native';

export default class SubscriberScreen extends Component {
  
  constructor(props) {
    super(props);
    this.state = {text: ''};
  }


render() {
    return (
      <View style={styles.container}>
      <Image
      style={{ width: 200, height: 200, resizeMode: "contain"}}
      source={require('./components/Logo.png')}
      />
      <View style={styles.idcontainer}>
        <TextInput
          style={{textAlign: 'center', fontSize: 25}}
          placeholder="Loro Subscribe ID"
          onChangeText={(text) => this.setState({text})}
        />
        </View>
        <TouchableOpacity onPress={() => this.props.navigation.navigate('MainScreen')}>
        <View style={styles.logincontainer}>
          <Text style={{marginTop: 15, textAlign:'center', color:'red',fontSize:25}}>Login</Text>
          </View>
      </TouchableOpacity>
        </View>
    );
  }
}


const styles = StyleSheet.create({
  container: {
    flex: 0.85,
    flexDirection: 'column',
    justifyContent: 'center',
    alignItems: 'center',
  },

  idcontainer: {
    height: 60,
    width: 300,
    borderRadius: 30,
    backgroundColor: 'pink',
  },

  logincontainer: {
    height: 60,
    width: 300,
    borderRadius: 30,
    backgroundColor: 'pink',
    marginTop: 30,
  },

});
